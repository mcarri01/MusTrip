<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xeno.MusTrip.MainActivity"
    android:background="#FFFFFF" >


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/about"
        android:background="@drawable/about"
        android:onClick="onAboutClick"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/trip"
        android:background="@drawable/trip"
        android:onClick="onTripClick"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/find"
        android:layout_toEndOf="@+id/find" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/find"
        android:background="@drawable/magnifying"
        android:onClick="onSearchClick"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please read &quot;About&quot; before usage!"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#000000"

        android:id="@+id/topbar"

        android:layout_above="@+id/trip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trip Mode"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Music Finder Mode"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Plays Music by City"
        android:id="@+id/textView3"
        android:layout_above="@+id/topbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Plays Local Music"
        android:id="@+id/textView4"
        android:layout_above="@+id/find"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:rotation="90"
        android:id="@+id/bar"
        android:background="#000000"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
